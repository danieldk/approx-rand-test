#!/usr/bin/make -f

DEB_CABAL_PACKAGE = approx-rand-test
DEB_SETUP_GHC_CONFIGURE_ARGS = -fwithCairo

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/hlibrary.mk

build/approx-rand-test:: build-ghc-stamp
