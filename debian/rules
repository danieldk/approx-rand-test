	install -m 755 -s -D dist-ghc/build/approx_rand_test_paired/approx_rand_test_paired debian/approx-rand-test/usr/bin/approx_rand_test_paired || true
	install -m 755 -s -D dist-ghc/build/approx_rand_test/approx_rand_test debian/approx-rand-test/usr/bin/approx_rand_test || true

